---

<Layout>
  <SEO
    title={currentLang === "en"
      ? "Contact Us | ORO INCA Jewelry"
      : "Contacto | ORO INCA Joyer√≠a"}
    description={currentLang === "en"
      ? "Contact ORO INCA Jewelry. We're here to help you with any questions about our products. WhatsApp, phone, email and location."
      : "Cont√°ctanos en ORO INCA Joyer√≠a. Estamos aqu√≠ para ayudarte con cualquier consulta sobre nuestros productos. WhatsApp, tel√©fono, email y ubicaci√≥n."}
    canonical="/contact"
    keywords="contacto joyer√≠a, WhatsApp joyer√≠a, tel√©fono joyer√≠a, email joyer√≠a"
    lang={currentLang}
    structuredData={{
      "@context": "https://schema.org",
      "@type": "ContactPage",
      name: currentLang === "en" ? "Contact Us" : "Contacto",
      description:
        currentLang === "en"
          ? "Contact ORO INCA Jewelry for questions and inquiries"
          : "Cont√°ctanos en ORO INCA Joyer√≠a para consultas e informaci√≥n",
      url: "https://oro-inca-joyeria.vercel.app/contact",
      mainEntity: {
        "@type": "Organization",
        name: "ORO INCA Joyer√≠a",
        contactPoint: {
          "@type": "ContactPoint",
          telephone: "+51-944-480-535",
          contactType: "Customer Service",
          areaServed: "PE",
          availableLanguage: ["Spanish", "English"],
        },
      },
    }}
  />
  <section class="pt-24 pb-16">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-[#16273b] mb-4">
          {t("contact.titulo")}
        </h1>
        <p class="text-lg text-gray-700 max-w-2xl mx-auto">
          {t("contact.subtitulo")}
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 mb-20">
        <!-- Informaci√≥n de Contacto -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-bold text-[#16273b] mb-6">
              {t("contact.informacionContacto")}
            </h2>

            <!-- WhatsApp -->
            <div
              class="bg-white p-6 rounded-md shadow-md hover:shadow-lg transition-shadow mb-4"
            >
              <div class="flex items-start gap-4">
                <div class="text-3xl">üí¨</div>
                <div class="flex-1">
                  <h3 class="font-semibold text-lg text-gray-900 mb-2">
                    {t("footer.whatsapp")}
                  </h3>
                  <p class="text-gray-600 mb-3">
                    {t("contact.chatearWhatsApp")}
                  </p>
                  <a
                    href="https://wa.me/51944480535"
                    target="_blank"
                    class="inline-block bg-[#25D366] hover:bg-[#20BA5A] text-white px-6 py-2 rounded-full font-semibold transition-colors"
                  >
                    {t("contact.abrirWhatsApp")}
                  </a>
                </div>
              </div>
            </div>

            <!-- Tel√©fono -->
            <div
              class="bg-white p-6 rounded-md shadow-md hover:shadow-lg transition-shadow mb-4"
            >
              <div class="flex items-start gap-4">
                <div class="text-3xl">üìû</div>
                <div class="flex-1">
                  <h3 class="font-semibold text-lg text-gray-900 mb-2">
                    Phone
                  </h3>
                  <p class="text-gray-600 mb-3">
                    {t("contact.llamarTelefono")}
                  </p>
                  <a
                    href="tel:+51944480535"
                    class="inline-block bg-[#d4af37] hover:bg-[#b8941f] text-[#16273b] px-6 py-2 rounded-full font-semibold transition-colors"
