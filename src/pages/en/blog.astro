---
import Layout from "../../layouts/Layout.astro";
import SEO from "../../components/SEO.astro";
import { BLOG_POSTS } from "../../data/blog";
import type { BlogCategory } from "../../data/blog";
import { getLocalizedPath, useTranslations, getBlogTranslation } from "../../i18n";

const category = Astro.url.searchParams.get("category") as BlogCategory | null;
const filteredPosts = category
  ? BLOG_POSTS.filter((post) => post.category === category)
  : BLOG_POSTS;

// Esta página siempre está en inglés
const currentLang = "en";
const t = useTranslations(currentLang);
const getPath = (path: string) => getLocalizedPath(path, currentLang);
---

<Layout>
  <SEO
    title={currentLang === "en"
      ? "Blog | ORO INCA Jewelry - Jewelry Tips & Trends"
      : "Blog | ORO INCA Joyería - Consejos y Tendencias"}
    description={currentLang === "en"
      ? "Discover articles about jewelry, care tips, trends and expert advice from ORO INCA Jewelry."
      : "Descubre artículos sobre joyería, cuidado de tus piezas, tendencias y consejos de nuestros expertos."}
    canonical="/blog"
    keywords="blog joyería, cuidado de joyas, tendencias joyería, consejos joyería, artículos joyería"
    lang={currentLang}
    structuredData={{
      "@context": "https://schema.org",
      "@type": "Blog",
      name: "ORO INCA Joyería Blog",
      description:
        currentLang === "en"
          ? "Jewelry blog with tips, trends and expert advice"
          : "Blog de joyería con consejos, tendencias y asesoramiento experto",
      url: "https://oro-inca-joyeria.vercel.app/blog",
      blogPost: filteredPosts.slice(0, 10).map((post) => ({
        "@type": "BlogPosting",
        headline: post.title,
        description: post.excerpt,
        image: post.image,
        datePublished: post.date,
        author: {
          "@type": "Organization",
          name: "ORO INCA Joyería",
        },
      })),
    }}
  />
  <section class="pt-24 pb-16">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-[#16273b] mb-4">
          {t("blog.titulo")}
        </h1>
        <p class="text-lg text-gray-700 max-w-2xl mx-auto">
          {t("blog.subtitulo")}
        </p>
      </div>

      <!-- Categorías -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <a
          href={getPath("/blog")}
          class={`px-6 py-2 rounded-full font-medium transition ${
            !category
              ? "bg-[#16273b] text-white"
              : "bg-gray-100 text-gray-700 hover:bg-gray-200"
          }`}
        >
          {t("common.todos")}
        </a>
        <a
          href={getPath("/blog?category=Cuidado de Joyas")}
          class={`px-6 py-2 rounded-full font-medium transition ${
            category === "Cuidado de Joyas"
              ? "bg-[#16273b] text-white"
              : "bg-gray-100 text-gray-700 hover:bg-gray-200"
          }`}
        >
          Jewelry Care
        </a>
        <a
          href={getPath("/blog?category=Tendencias")}
          class={`px-6 py-2 rounded-full font-medium transition ${
            category === "Tendencias"
              ? "bg-[#16273b] text-white"
              : "bg-gray-100 text-gray-700 hover:bg-gray-200"
          }`}
        >
          Trends
        </a>
        <a
          href={getPath("/blog?category=Historias")}
          class={`px-6 py-2 rounded-full font-medium transition ${
            category === "Historias"
              ? "bg-[#16273b] text-white"
              : "bg-gray-100 text-gray-700 hover:bg-gray-200"
          }`}
        >
          Stories
        </a>
        <a
          href={getPath("/blog?category=Consejos")}
          class={`px-6 py-2 rounded-full font-medium transition ${
            category === "Consejos"
              ? "bg-[#16273b] text-white"
              : "bg-gray-100 text-gray-700 hover:bg-gray-200"
          }`}
        >
          Tips
        </a>
      </div>

      <!-- Grid de Artículos -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {
          filteredPosts.map((post) => {
            const blogTrans = getBlogTranslation(post.slug, currentLang);
            const postTitle = blogTrans?.title || post.title;
            const postExcerpt = blogTrans?.excerpt || post.excerpt;
            const postCategory = blogTrans?.category || post.category;
            return (
              <a
                href={getPath(`/blog/${post.slug}`)}
                class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-shadow block"
              >
                <div class="h-48 bg-gradient-to-br from-[#d4af37] to-[#b8941f]">
                  <img
                    src={post.image}
                    alt={postTitle}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="p-6">
                  <span class="text-sm text-gray-500 mb-2 block">
                    {postCategory} • {post.date}
                  </span>
                  <h2 class="text-xl font-bold text-[#16273b] mb-3">
                    {postTitle}
                  </h2>
                  <p class="text-gray-600 mb-4">{postExcerpt}</p>
                  <span class="text-[#d4af37] font-semibold hover:underline">
                    {t("common.leerMas")} →
                  </span>
                </div>
              </a>
            );
          })
        }
      </div>

      <!-- Newsletter -->
      <div
        class="bg-gradient-to-r from-[#16273b] to-[#0f1b2d] rounded-3xl p-8 md:p-12 text-center text-white"
      >
        <h2 class="text-3xl font-bold mb-4">{t("blog.newsletter")}</h2>
        <p class="text-gray-300 mb-6 max-w-2xl mx-auto">
          {t("blog.newsletterDescripcion")}
        </p>
        <form class="max-w-md mx-auto flex gap-4">
          <input
            type="email"
            placeholder={t("blog.tuEmail")}
            class="flex-1 px-4 py-3 rounded-full text-gray-900 outline-none focus:ring-2 focus:ring-[#d4af37]"
          />
          <button
            type="submit"
            class="bg-[#d4af37] hover:bg-[#b8941f] text-[#16273b] px-8 py-3 rounded-full font-semibold transition-colors"
          >
            {t("blog.suscribirse")}
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
