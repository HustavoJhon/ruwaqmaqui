---
import Layout from "../../../layouts/Layout.astro";
import { PRODUCTS } from "../../../data/products";
import ProductCard from "../../../components/ProductCard.astro";
import { getLocalizedPath, useTranslations } from "../../../i18n";

const currentLang = "en";
const t = useTranslations(currentLang);
const getPath = (path: string) => getLocalizedPath(path, currentLang);

// Filter rings for weddings
const weddingRings = PRODUCTS.filter((p) => p.category === "anillos");
---

<Layout title="Wedding Rings | Eterno Compromiso | ORO INCA Jewelry">
    <section class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-6">
            <!-- Breadcrumb -->
            <nav class="mb-8 text-sm">
                <ol class="flex items-center gap-2 text-gray-600">
                    <li>
                        <a
                            href={getPath("/")}
                            class="hover:text-[#d4af37] transition"
                            >{t("nav.inicio")}</a>
                    </li>
                    <li>/</li>
                    <li>
                        <a
                            href={getPath("/eterno-compromiso")}
                            class="hover:text-[#d4af37] transition"
                            >{t("submenu.eventos.eternoCompromiso")}</a>
                    </li>
                    <li>/</li>
                    <li class="text-gray-900 font-medium">Weddings</li>
                </ol>
            </nav>

            <!-- Hero -->
            <div
                class="text-center mb-16 bg-gradient-to-br from-[#16273b] to-[#0f1b2d] rounded-3xl p-12 md:p-16 text-white"
            >
                <div class="text-6xl mb-6">ðŸ’’</div>
                <h1 class="text-4xl md:text-6xl font-bold mb-6">
                    Wedding Rings
                </h1>
                <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto">
                    Eternal symbols of love and commitment. We create unique
                    rings that reflect your story together.
                </p>
            </div>

            <!-- Main Content -->
            <div class="grid md:grid-cols-2 gap-12 mb-16">
                <div>
                    <h2 class="text-3xl font-bold text-[#16273b] mb-6">
                        Exclusive Designs for Your Special Day
                    </h2>
                    <div class="space-y-4 text-gray-700">
                        <p>
                            Every wedding is unique, and your rings should be
                            too. At ORO INCA, we work with you to create wedding
                            rings that reflect your personality as a couple.
                        </p>
                        <p>
                            Our wedding rings combine tradition and modernity,
                            using the highest quality materials and artisanal
                            techniques that honor our Peruvian heritage.
                        </p>
                        <h3 class="text-xl font-bold text-[#16273b] mt-8 mb-4">
                            Our Process:
                        </h3>
                        <ul class="space-y-3 list-disc list-inside">
                            <li>
                                Personalized consultation to understand your
                                vision
                            </li>
                            <li>Exclusive design based on your preferences</li>
                            <li>
                                Selection of premium materials (18k gold, 925
                                silver)
                            </li>
                            <li>
                                Handcrafted fabrication with attention to detail
                            </li>
                            <li>Optional personalized engraving</li>
                            <li>Delivery on time for your special day</li>
                        </ul>
                    </div>
                </div>
                <div class="bg-gray-50 rounded-2xl p-8">
                    <h3 class="text-2xl font-bold text-[#16273b] mb-6">
                        Included Features
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-start gap-3">
                            <span class="text-[#d4af37] text-2xl">âœ“</span>
                            <div>
                                <h4 class="font-semibold text-gray-900">
                                    Custom Design
                                </h4>
                                <p class="text-gray-600 text-sm">
                                    Created exclusively for you
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <span class="text-[#d4af37] text-2xl">âœ“</span>
                            <div>
                                <h4 class="font-semibold text-gray-900">
                                    Premium Materials
                                </h4>
                                <p class="text-gray-600 text-sm">
                                    Certified 18k Gold or 925 Silver
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <span class="text-[#d4af37] text-2xl">âœ“</span>
                            <div>
                                <h4 class="font-semibold text-gray-900">
                                    Custom Engraving
                                </h4>
                                <p class="text-gray-600 text-sm">
                                    Includes names, date or special message
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <span class="text-[#d4af37] text-2xl">âœ“</span>
                            <div>
                                <h4 class="font-semibold text-gray-900">
                                    Quality Warranty
                                </h4>
                                <p class="text-gray-600 text-sm">
                                    Lifetime warranty on materials
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <span class="text-[#d4af37] text-2xl">âœ“</span>
                            <div>
                                <h4 class="font-semibold text-gray-900">
                                    Personalized Advice
                                </h4>
                                <p class="text-gray-600 text-sm">
                                    Guidance throughout the entire process
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Products -->
            {
                weddingRings.length > 0 && (
                    <div class="mb-16">
                        <h2 class="text-3xl md:text-4xl font-bold text-[#16273b] mb-8">
                            Our Rings Collection
                        </h2>
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                            {weddingRings.map((ring) => (
                                <ProductCard
                                    id={ring.id}
                                    name={ring.name}
                                    description={ring.description}
                                    price={ring.price}
                                    oldPrice={ring.oldPrice}
                                    image={ring.image}
                                    badge={ring.badge}
                                />
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- CTA -->
            <div
                class="bg-gradient-to-r from-[#d4af37] to-[#b8941f] rounded-3xl p-12 text-center text-[#16273b]"
            >
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Ready to start?
                </h2>
                <p class="text-lg mb-8 opacity-90">
                    Schedule a free consultation and let's start creating your
                    perfect rings.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a
                        href={getPath("/contact")}
                        class="bg-[#16273b] hover:bg-[#0f1b2d] text-white px-8 py-4 rounded-full font-semibold text-lg transition-colors"
                    >
                        {t("nav.contacto")}
                    </a>
                    <a
                        href="https://wa.me/51926946362"
                        target="_blank"
                        class="bg-white hover:bg-gray-100 text-[#16273b] px-8 py-4 rounded-full font-semibold text-lg transition-colors"
                    >
                        {t("footer.whatsapp")}
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
