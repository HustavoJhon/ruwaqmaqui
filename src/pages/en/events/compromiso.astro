---
import Layout from "../../../layouts/Layout.astro";
import { PRODUCTS } from "../../../data/products";
import ProductCard from "../../../components/ProductCard.astro";
import { getLocalizedPath, useTranslations } from "../../../i18n";

const currentLang = "en";
const t = useTranslations(currentLang);
const getPath = (path: string) => getLocalizedPath(path, currentLang);

// Filter rings for engagement
const engagementRings = PRODUCTS.filter((p) => p.category === "anillos");
---

<Layout title="Engagement Rings | Eterno Compromiso | ORO INCA Jewelry">
    <section class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-6">
            <!-- Breadcrumb -->
            <nav class="mb-8 text-sm">
                <ol class="flex items-center gap-2 text-gray-600">
                    <li>
                        <a
                            href={getPath("/")}
                            class="hover:text-[#d4af37] transition"
                            >{t("nav.inicio")}</a>
                    </li>
                    <li>/</li>
                    <li>
                        <a
                            href={getPath("/eterno-compromiso")}
                            class="hover:text-[#d4af37] transition"
                            >Eterno Compromiso</a>
                    </li>
                    <li>/</li>
                    <li class="text-gray-900 font-medium">Engagement</li>
                </ol>
            </nav>

            <!-- Hero -->
            <div
                class="text-center mb-16 bg-gradient-to-br from-[#d4af37] to-[#b8941f] rounded-3xl p-12 md:p-16 text-white"
            >
                <div class="text-6xl mb-6">üíç</div>
                <h1 class="text-4xl md:text-6xl font-bold mb-6">
                    Engagement Rings
                </h1>
                <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto">
                    Capture the perfect moment with a unique engagement ring
                    that reflects your love.
                </p>
            </div>

            <!-- Main Content -->
            <div class="grid md:grid-cols-2 gap-12 mb-16">
                <div>
                    <h2 class="text-3xl font-bold text-[#16273b] mb-6">
                        The Perfect Ring for the Perfect Moment
                    </h2>
                    <div class="space-y-4 text-gray-700">
                        <p>
                            The engagement ring is more than a jewel; it is a
                            promise, a symbol of eternal love. At ORO INCA, we
                            understand the importance of this moment and work
                            with you to create the perfect piece.
                        </p>
                        <p>
                            Our exclusive designs combine timeless elegance with
                            modern touches, creating rings that will be
                            cherished for generations.
                        </p>
                        <h3 class="text-xl font-bold text-[#16273b] mt-8 mb-4">
                            Available Options:
                        </h3>
                        <ul class="space-y-3 list-disc list-inside">
                            <li>Classic and elegant solitaire rings</li>
                            <li>Modern designs with unique elements</li>
                            <li>Selection of precious stones</li>
                            <li>Fully bespoke custom designs</li>
                            <li>Metal options: Yellow, white or rose gold</li>
                            <li>Optional personalized engraving</li>
                        </ul>
                    </div>
                </div>
                <div class="bg-gray-50 rounded-2xl p-8">
                    <h3 class="text-2xl font-bold text-[#16273b] mb-6">
                        Selection Guide
                    </h3>
                    <div class="space-y-4">
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-2">
                                Classic Style
                            </h4>
                            <p class="text-gray-600 text-sm">
                                Perfect for those who appreciate timeless
                                elegance. Designs that never go out of style.
                            </p>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-2">
                                Modern Style
                            </h4>
                            <p class="text-gray-600 text-sm">
                                Contemporary designs with clean lines and unique
                                elements that reflect personality.
                            </p>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-2">
                                Custom Design
                            </h4>
                            <p class="text-gray-600 text-sm">
                                We create a completely unique design based on
                                your preferences and history together.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Products -->
            {
                engagementRings.length > 0 && (
                    <div class="mb-16">
                        <h2 class="text-3xl md:text-4xl font-bold text-[#16273b] mb-8">
                            Our Engagement Rings Collection
                        </h2>
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                            {engagementRings.map((ring) => (
                                <ProductCard
                                    id={ring.id}
                                    name={ring.name}
                                    description={ring.description}
                                    price={ring.price}
                                    oldPrice={ring.oldPrice}
                                    image={ring.image}
                                    badge={ring.badge}
                                />
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- CTA -->
            <div
                class="bg-gradient-to-r from-[#16273b] to-[#0f1b2d] rounded-3xl p-12 text-center text-white"
            >
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Find the Perfect Ring
                </h2>
                <p class="text-gray-300 text-lg mb-8">
                    Schedule a consultation and discover how we can create the
                    engagement ring of your dreams.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a
                        href={getPath("/contact")}
                        class="bg-[#d4af37] hover:bg-[#b8941f] text-[#16273b] px-8 py-4 rounded-full font-semibold text-lg transition-colors"
                    >
                        {currentLang === "en" ? "Request Consultation" : "Solicitar Consulta"}
                    </a>
                    <a
                        href="https://wa.me/51926946362"
                        target="_blank"
                        class="bg-white/10 hover:bg-white/20 text-white px-8 py-4 rounded-full font-semibold text-lg transition-colors border border-white/20"
                    >
                        {t("footer.whatsapp")}
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
