---
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";
import { type Language, useTranslations } from "../i18n";

// Obtener idioma actual
const urlLang = Astro.url.searchParams.get("lang") as Language | null;
const cookieLang = Astro.cookies.get("language")?.value as Language | null;
const currentLang: Language =
  urlLang && (urlLang === "es" || urlLang === "en")
    ? urlLang
    : cookieLang && (cookieLang === "es" || cookieLang === "en")
      ? cookieLang
      : "es";

const t = useTranslations(currentLang);
