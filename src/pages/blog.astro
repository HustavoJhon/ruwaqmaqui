---
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";
import { BLOG_POSTS } from "../data/blog";
import type { BlogCategory } from "../data/blog";
import { getCurrentLanguage, useTranslations, getBlogTranslation } from "../i18n";

const category = Astro.url.searchParams.get("category") as BlogCategory | null;
const filteredPosts = category 
  ? BLOG_POSTS.filter(post => post.category === category)
  : BLOG_POSTS;

// Detectar idioma desde URL
const currentLang = getCurrentLanguage(Astro);
const t = useTranslations(currentLang);
---

<Layout>
  <SEO
    title={currentLang === 'en' ? "Blog | ORO INCA Jewelry - Jewelry Tips & Trends" : "Blog | ORO INCA Joyer칤a - Consejos y Tendencias"}
    description={currentLang === 'en' 
      ? "Discover articles about jewelry, care tips, trends and expert advice from ORO INCA Jewelry."
      : "Descubre art칤culos sobre joyer칤a, cuidado de tus piezas, tendencias y consejos de nuestros expertos."}
    canonical="/blog"
    keywords="blog joyer칤a, cuidado de joyas, tendencias joyer칤a, consejos joyer칤a, art칤culos joyer칤a"
    lang={currentLang}
    structuredData={{
      "@context": "https://schema.org",
      "@type": "Blog",
      "name": "ORO INCA Joyer칤a Blog",
      "description": currentLang === 'en' 
        ? "Jewelry blog with tips, trends and expert advice"
        : "Blog de joyer칤a con consejos, tendencias y asesoramiento experto",
      "url": "https://oro-inca-joyeria.vercel.app/blog",
      "blogPost": filteredPosts.slice(0, 10).map(post => ({
        "@type": "BlogPosting",
        "headline": post.title,
        "description": post.excerpt,
        "image": post.image,
        "datePublished": post.date,
        "author": {
          "@type": "Organization",
          "name": "ORO INCA Joyer칤a"
        }
      }))
    }}
  />
  <section class="pt-24 pb-16 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      
      <!-- Header mejorado -->
      <div class="text-center mb-16 blog-header">
        <div class="inline-block mb-4">
          <span class="px-6 py-2 bg-gradient-to-r from-[#D4AF37]/10 to-[#D4AF37]/5 text-[#16273B] rounded-full text-sm font-semibold uppercase tracking-wider border border-[#D4AF37]/20">
            {t('blog.titulo')}
          </span>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold text-[#16273B] mb-6 leading-tight">
          {t('blog.titulo')}
        </h1>
        <div class="w-24 h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent mx-auto mb-6"></div>
        <p class="text-xl text-[#16273B]/70 max-w-2xl mx-auto font-light leading-relaxed">
          {t('blog.subtitulo')}
        </p>
      </div>

      <!-- Categor칤as con dise침o mejorado -->
      <div class="flex flex-wrap justify-center gap-4 mb-16 blog-categories">
        <a
          href="/blog"
          class={`px-8 py-3 rounded-full font-semibold transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-0.5 ${
            !category
              ? "bg-gradient-to-r from-[#16273B] to-[#16273B]/90 text-white shadow-lg"
              : "bg-white border-2 border-gray-200 text-[#16273B] hover:border-[#D4AF37]"
          }`}
        >
          Todos
        </a>
        <a
          href="/blog?category=Cuidado de Joyas"
          class={`px-8 py-3 rounded-full font-semibold transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-0.5 ${
            category === "Cuidado de Joyas"
              ? "bg-gradient-to-r from-[#16273B] to-[#16273B]/90 text-white shadow-lg"
              : "bg-white border-2 border-gray-200 text-[#16273B] hover:border-[#D4AF37]"
          }`}
        >
          Cuidado de Joyas
        </a>
        <a
          href="/blog?category=Tendencias"
          class={`px-8 py-3 rounded-full font-semibold transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-0.5 ${
            category === "Tendencias"
              ? "bg-gradient-to-r from-[#16273B] to-[#16273B]/90 text-white shadow-lg"
              : "bg-white border-2 border-gray-200 text-[#16273B] hover:border-[#D4AF37]"
          }`}
        >
          Tendencias
        </a>
        <a
          href="/blog?category=Historias"
          class={`px-8 py-3 rounded-full font-semibold transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-0.5 ${
            category === "Historias"
              ? "bg-gradient-to-r from-[#16273B] to-[#16273B]/90 text-white shadow-lg"
              : "bg-white border-2 border-gray-200 text-[#16273B] hover:border-[#D4AF37]"
          }`}
        >
          Historias
        </a>
        <a
          href="/blog?category=Consejos"
          class={`px-8 py-3 rounded-full font-semibold transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-0.5 ${
            category === "Consejos"
              ? "bg-gradient-to-r from-[#16273B] to-[#16273B]/90 text-white shadow-lg"
              : "bg-white border-2 border-gray-200 text-[#16273B] hover:border-[#D4AF37]"
          }`}
        >
          Consejos
        </a>
      </div>

      <!-- Grid de Art칤culos con dise침o mejorado -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16 blog-grid">
        {filteredPosts.map((post, index) => {
          const blogTrans = getBlogTranslation(post.slug, currentLang);
          const postTitle = blogTrans?.title || post.title;
          const postExcerpt = blogTrans?.excerpt || post.excerpt;
          const postCategory = blogTrans?.category || post.category;
          return (
            <a
              href={`/blog/${post.slug}`}
              class="bg-white rounded-md overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 block group hover:-translate-y-2 border border-gray-100"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="relative h-56 bg-gradient-to-br from-[#D4AF37]/20 to-[#16273B]/10 overflow-hidden">
                <img
                  src={post.image}
                  alt={postTitle}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-[#16273B]/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
              <div class="p-8">
                <div class="flex items-center gap-3 mb-4">
                  <span class="text-xs font-bold text-[#D4AF37] uppercase tracking-wider px-3 py-1 bg-[#D4AF37]/10 rounded-full border border-[#D4AF37]/20">
                    {postCategory}
                  </span>
                  <span class="text-xs text-[#16273B]/50 font-medium">
                    {post.date}
                  </span>
                </div>
                <h2 class="text-2xl font-bold text-[#16273B] mb-4 leading-tight group-hover:text-[#D4AF37] transition-colors duration-300">
                  {postTitle}
                </h2>
                <p class="text-[#16273B]/70 mb-6 leading-relaxed line-clamp-3">
                  {postExcerpt}
                </p>
                <div class="flex items-center gap-2 text-[#D4AF37] font-semibold group-hover:gap-4 transition-all duration-300">
                  <span>{t('common.leerMas')}</span>
                  <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </a>
          );
        })}
      </div>

      <!-- Newsletter con dise침o mejorado -->
      <div class="bg-gradient-to-br from-[#16273B] to-[#16273B]/90 rounded-md p-10 md:p-16 text-center relative overflow-hidden shadow-2xl newsletter-section">
        <!-- Patr칩n decorativo de fondo -->
        <div class="absolute inset-0 opacity-5">
          <div class="absolute top-0 left-0 w-64 h-64 bg-[#D4AF37] rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 right-0 w-96 h-96 bg-[#D4AF37] rounded-full blur-3xl"></div>
        </div>
        
        <div class="relative z-10">
          <div class="inline-block mb-6">
            <div class="text-6xl mb-4">九괦잺</div>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
            {t('blog.newsletter')}
          </h2>
          <div class="w-24 h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent mx-auto mb-6"></div>
          <p class="text-white/80 text-lg mb-10 max-w-2xl mx-auto font-light leading-relaxed">
            {t('blog.newsletterDescripcion')}
          </p>
          <form class="max-w-xl mx-auto">
            <div class="flex flex-col sm:flex-row gap-4 bg-white/10 backdrop-blur-sm p-2 rounded-full border border-white/20">
              <input
                type="email"
                placeholder={t('blog.tuEmail')}
                class="flex-1 px-6 py-4 rounded-full text-white placeholder-white/60 bg-white/10 outline-none focus:bg-white/20 transition-colors border border-transparent focus:border-white/30"
              />
              <button
                type="submit"
                class="bg-[#D4AF37] hover:bg-[#b8941f] text-white px-10 py-4 rounded-full font-bold transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5 whitespace-nowrap"
              >
                {t('blog.suscribirse')}
              </button>
            </div>
            <p class="text-white/60 text-sm mt-4">
              游 {currentLang === 'en' ? 'Your data is safe with us' : 'Tus datos est치n seguros con nosotros'}
            </p>
          </form>
        </div>
      </div>

    </div>
  </section>
</Layout>

<style>
  /* Animaciones sutiles al cargar */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .blog-header {
    animation: fadeInDown 0.6s ease-out;
  }

  .blog-categories {
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .blog-grid > a {
    animation: fadeInUp 0.6s ease-out both;
  }

  .newsletter-section {
    animation: scaleIn 0.8s ease-out 0.4s both;
  }

  /* Limitar l칤neas de texto */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Efecto de brillo sutil en hover */
  .group:hover h2 {
    text-shadow: 0 0 20px rgba(212, 175, 55, 0.2);
  }

  /* Animaci칩n de pulso en el bot칩n de suscripci칩n */
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 10px 25px -5px rgba(212, 175, 55, 0.3);
    }
    50% {
      box-shadow: 0 20px 35px -5px rgba(212, 175, 55, 0.5);
    }
  }

  button[type="submit"]:hover {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  /* Transici칩n suave para categor칤as */
  .blog-categories a {
    position: relative;
    overflow: hidden;
  }

  .blog-categories a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.1), transparent);
    transition: left 0.5s;
  }

  .blog-categories a:hover::before {
    left: 100%;
  }
</style>