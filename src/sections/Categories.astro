---
import { CATEGORIES } from "../data/categories";
import { useTranslations, type Language } from "../i18n";

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang as Language);
---

<section class="py-28 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6">

    <!-- Título de la sección -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900">
        {t('categories.titulo')}
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        {t('categories.subtitulo')}
      </p>
    </div>

    <!-- Grid de categorías -->
    <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-4">
      {CATEGORIES.map((cat) => (
        <a
          href="#"
          class="group relative overflow-hidden rounded-md shadow-lg bg-white h-[420px]"
        >
          <!-- Imagen con zoom al hover -->
          <img
            src={cat.image.src}
            alt={cat.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />

          <!-- Overlay oscuro -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent"></div>

          <!-- Contenido abajo -->
          <div class="absolute bottom-0 left-0 right-0 p-6 flex flex-col">
            <!-- Título: inicialmente más abajo -->
            <h3 class="text-2xl font-bold text-white translate-y-3 transition-transform duration-500 group-hover:-translate-y-2">
              {t(`categories.${cat.id}.title`)}
            </h3>

            <!-- Subtítulo: oculto al inicio -->
            <p class="text-white/80 mt-1 opacity-0 translate-y-3 transition-all duration-500 group-hover:opacity-100 group-hover:translate-y-0">
              {t(`categories.${cat.id}.subtitle`)}
            </p>
          </div>
        </a>
      ))}
    </div>

  </div>
</section>
