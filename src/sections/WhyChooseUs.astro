---
import { WHY_CHOOSE_US } from "../data/whyChooseUs";
import { useTranslations, type Language } from "../i18n";

interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;
const t = useTranslations(lang as Language);
---

<section class="py-28 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20">
      <h2 class="text-4xl font-bold text-[#16273b]">
        {t("whyChooseUs.title")}
      </h2>
      <p class="text-gray-600 mt-4">
        {t("whyChooseUs.subtitle")}
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-10">
      {
        WHY_CHOOSE_US.map(({ id, icon }) => (
          <div class="text-center p-8 rounded-md bg-gray-50 hover:shadow-xl transition">
            <div class="text-5xl mb-6">{icon}</div>

            <h3 class="text-lg font-semibold text-[#16273b]">
              {t(`whyChooseUs.${id}Title`)}
            </h3>

            <p class="text-sm text-gray-600 mt-3">
              {t(`whyChooseUs.${id}Desc`)}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
