---
import { FOOTER_LINKS } from "../data/footer";
import { useTranslations, type Language } from "../i18n";

interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;
const t = useTranslations(lang as Language);
---

<footer class="bg-[#0f1c2e] text-white pt-20">
  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-4 gap-10">
    <!-- BRAND -->
    <div>
      <h3 class="text-2xl font-bold text-[color:var(--gold)]">ORO INCA</h3>
      <p class="text-sm text-white/70 mt-4">
        {t("footer.description")}
      </p>
    </div>

    <!-- LINKS -->
    <div>
      <h4 class="font-semibold mb-4">{t("footer.quickLinks")}</h4>
      <ul class="space-y-2 text-sm text-white/70">
        <li class="hover:text-[color:var(--gold)] cursor-pointer">
          <a href={lang === "en" ? "/en/about" : "/nosotros"}
            >{t("footer.links.us")}</a
          >
        </li>
        <li class="hover:text-[color:var(--gold)] cursor-pointer">
          <a href={lang === "en" ? "/en/products" : "/products"}
            >{t("footer.links.catalogue")}</a
          >
        </li>
        <li class="hover:text-[color:var(--gold)] cursor-pointer">
          <a href={lang === "en" ? "/en/blog" : "/blog"}
            >{t("footer.links.blog")}</a
          >
        </li>
      </ul>
    </div>

    <div>
      <h4 class="font-semibold mb-4">{t("footer.followUs")}</h4>
      <!-- Using followUs as generic header for policies? Or maybe I should add policies header? Use quickLinks for now or just generic -->
      <ul class="space-y-2 text-sm text-white/70">
        <li class="hover:text-[color:var(--gold)] cursor-pointer">
          {t("footer.links.policies")}
        </li>
        <li class="hover:text-[color:var(--gold)] cursor-pointer">
          {t("footer.links.terms")}
        </li>
        <li class="hover:text-[color:var(--gold)] cursor-pointer">
          {t("footer.links.shipping")}
        </li>
        <li class="hover:text-[color:var(--gold)] cursor-pointer">
          {t("footer.links.faq")}
        </li>
      </ul>
    </div>

    <!-- CONTACT -->
    <div>
      <h4 class="font-semibold mb-4">{t("footer.contact")}</h4>
      <p class="text-sm text-white/70">üìû +51 926 946 362</p>
      <p class="text-sm text-white/70">üìç Per√∫</p>

      <a
        href="https://wa.me/51926946362"
        target="_blank"
        class="inline-block mt-6 bg-[#d4af37] text-[#16273b] px-6 py-3 rounded-full font-semibold"
      >
        WhatsApp
      </a>
    </div>
  </div>

  <div
    class="mt-16 border-t border-white/10 text-center py-6 text-xs text-white/50"
