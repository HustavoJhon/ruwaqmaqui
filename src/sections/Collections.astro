---
import { COLLECTIONS } from "../data/collections";
import type { ImageMetadata } from "astro";
import { useTranslations, type Language } from "../i18n";

interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;
const t = useTranslations(lang as Language);

// Normalizamos imÃ¡genes
const normalizeImage = (img: string | ImageMetadata) =>
  typeof img === "string" ? img : img.src;

// Translation helper with fallback to provided value when missing
const transWithFallback = (key: string, fallback: string) => {
  const val = t(key);
  return val === key ? fallback : val;
};
---

<section class="py-28 bg-[#16273b] text-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-[#d4af37]">
        {t("collections.title")}
      </h2>
      <p class="text-white/80 mt-4">
        {t("collections.subtitle")}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-10">
      {
        COLLECTIONS.map(({ id, image, title: colTitle = "", subtitle: colDesc = "" }) => (
          <article class="group relative overflow-hidden rounded-md">
            <img
              src={normalizeImage(image)}
              alt={transWithFallback(`collections.${id}.title`, colTitle)}
              class="h-[420px] w-full object-cover transition-transform duration-700 group-hover:scale-110"
              loading="lazy"
            />

            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent" />

            <div class="absolute bottom-0 p-8">
              <h3 class="text-2xl font-bold">{transWithFallback(`collections.${id}.title`, colTitle)}</h3>
              <p class="text-sm text-white/80">{transWithFallback(`collections.${id}.desc`, colDesc)}</p>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
